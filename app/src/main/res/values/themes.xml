<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingEvent" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/background_color</item>
        <item name="colorSurfaceContainerHigh">@color/search_view_color</item>
        <item name="colorOnBackground">@color/grey_on_background</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="CustomTextAppearance.BottomNavigation" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_on_background</item>
    </style>

    <style name="App.Custom.Indicator"
        parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/indicator_color</item>
    </style>
</resources>