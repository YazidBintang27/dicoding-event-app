<resources>
    <!-- Base application theme. -->
    <style name="Theme.DicodingEvent" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/dark_background_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="colorSurfaceContainerHigh">@color/search_view_color_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTextAppearance.BottomNavigation" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_on_light_background</item>
    </style>

    <style name="App.Custom.Indicator"
        parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/indicator_color</item>
    </style>
</resources>